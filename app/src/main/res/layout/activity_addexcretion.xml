<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBE6"
    tools:context=".addexcretion">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/cancelrc"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="110dp"
        android:text="取消"
        android:textAlignment="viewStart"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/addrc"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="307dp"
        android:layout_marginTop="113dp"
        android:text="新增"
        android:textAlignment="viewStart"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="66dp"
        android:text="大小便紀錄"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="30dp" />

    <EditText
        android:id="@+id/recordrc1"
        android:layout_width="257dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="236dp"
        android:background="#d5d5d5"
        android:ems="10"
        android:hint="請輸入大便狀況"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/bigrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="242dp"
        android:text="大便:"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="145dp" />

    <EditText
        android:id="@+id/recordrc2"
        android:layout_width="257dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="467dp"
        android:background="#d5d5d5"
        android:ems="10"
        android:hint="請輸入小便狀況"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="227dp" />

    <TextView
        android:id="@+id/smallrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="473dp"
        android:text="小便:"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="240dp" />
    </RelativeLayout>

</ScrollView>
</RelativeLayout>

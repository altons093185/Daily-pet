<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBE6"
    tools:context=".remind_addschdule_Clear">


    <View
        android:id="@+id/divider3"
        android:layout_width="411dp"
        android:layout_height="1dp"


        android:layout_marginTop="78dp"
        android:layout_marginBottom="34dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/newschtitle3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addsch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="7dp"
        android:background="#d5d5d5"
        android:text="加入"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="5dp"
        android:text="取消"
        android:textColor="#ff0000"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:text="新增行程"
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintEnd_toStartOf="@+id/addsch3"
        app:layout_constraintStart_toEndOf="@+id/cancel3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newschtitle3"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="23dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="標題"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/newschtime3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <EditText
        android:id="@+id/newschtime3"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="22dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="選擇時間"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/newschrepeat3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newschtitle3" />

    <EditText
        android:id="@+id/newschrepeat3"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="23dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="重複"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/newschhint3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newschtime3" />

    <EditText
        android:id="@+id/newschhint3"
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="31dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="提示"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/newschmessage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newschrepeat3" />

    <EditText
        android:id="@+id/newschmessage3"
        android:layout_width="379dp"
        android:layout_height="241dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="54dp"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="附註"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newschhint3" />
</android.support.constraint.ConstraintLayout>